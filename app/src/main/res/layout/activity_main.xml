<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/md_theme_light_primaryContainer">

    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="412dp"
        android:layout_height="530dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/md_theme_light_purple"
                android:drawableLeft="@drawable/baseline_airplanemode_inactive_24"
                android:text="Turn off flight mode"
                android:textColor="@color/md_theme_light_primaryContainer" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/md_theme_light_outlineVariant"
                android:text="Picture saved to gallery"
                android:textColor="@color/md_theme_light_error" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rounded_button_lvl"
                android:drawableLeft="@drawable/baseline_star_24"
                android:drawableRight="@drawable/baseline_star_24"
                android:text="Level 4 completed" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"

            android:orientation="vertical">

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/md_theme_light_error"
                android:drawableLeft="@drawable/baseline_sync_24"
                android:text="Updating profile"
                android:textColor="@color/md_theme_light_primaryContainer" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/md_theme_light_onSecondaryContainer"
                android:text="Unlocked level 5"
                android:textColor="@color/md_theme_light_neon_blue"
                app:strokeColor="@color/md_theme_light_neon_blue"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rounded_button"
                android:drawableLeft="@drawable/baseline_pause_circle_24"
                android:text="Music paused" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTitulo"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio individual 11"
        android:textColor="@color/seed"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/containerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>